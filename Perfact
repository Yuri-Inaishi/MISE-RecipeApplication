  );
};

// ==================== Recipe Detail ====================
const RecipeDetail: React.FC<{ recipe: Recipe; onBack: () => void; onEdit: () => void }> = ({ recipe, onBack, onEdit }) => {
  const { toggleFavorite, deleteRecipe } = useApp();
  const [servings, setServings] = useState(recipe.servings);

  const handleDelete = () => {
    if (window.confirm(`ã€Œ${recipe.title}ã€ã‚’å‰Šé™¤ã—ã¾ã™ã‹ï¼Ÿ`)) {
      deleteRecipe(recipe.id);
      onBack();
    }
  };

  return (
    <div className="min-h-screen bg-gray-50">
      <header className="bg-white border-b border-gray-200 sticky top-0 z-50">
        <div className="max-w-4xl mx-auto px-4 sm:px-6 py-5 flex justify-between items-center">
          <button type="button" onClick={onBack} className="text-xl text-gray-500 hover:text-amber-700">â†</button>
          <div className="flex gap-3">
            <button
              type="button"
              onClick={() => toggleFavorite(recipe.id)}
              className={`text-xl ${recipe.isFavorite ? 'text-amber-700' : 'text-gray-300'}`}
            >
              â˜…
            </button>
            <button type="button" onClick={onEdit} className="text-lg text-gray-500 hover:text-amber-700">âœ</button>
          </div>
        </div>
      </header>

      <main className="max-w-4xl mx-auto px-4 sm:px-6 py-10">
        <div className="bg-white rounded-sm shadow-sm overflow-hidden mb-8">
          <div className="aspect-video bg-gray-100 flex items-center justify-center">
            {recipe.imageUrl ? (
              <img src={recipe.imageUrl} alt={recipe.title} className="w-full h-full object-cover" />
            ) : (
              <span className="text-8xl">ğŸ½ï¸</span>
            )}
          </div>
          <div className="p-8">
            <h1 className="text-3xl font-normal mb-4">{recipe.title}</h1>
            <div className="flex gap-6 text-sm text-gray-500 mb-4">
              <span>â± {recipe.cookingTime}åˆ†</span>
              <span>ğŸ‘¤ {getDifficultyLabel(recipe.difficulty)}</span>
              <span>ğŸ“… {formatDate(recipe.createdAt)}</span>
            </div>
            <div className="flex gap-2">
              {recipe.tags.map(tag => (
                <span key={tag} className="px-3 py-1 bg-gray-50 rounded-sm text-xs">{tag}</span>
              ))}
            </div>
          </div>
        </div>

        <div className="bg-white rounded-sm shadow-sm p-6 mb-6">
          <div className="flex justify-between items-center">
            <span className="text-sm text-gray-500">åˆ†é‡èª¿æ•´</span>
            <div className="flex items-center gap-4">
              <button
                type="button"
                onClick={() => setServings(Math.max(1, servings - 1))}
                className="w-8 h-8 border border-gray-200 rounded-sm"
              >
                -
              </button>
              <span className="text-lg font-medium">{servings}äººåˆ†</span>
              <button
                type="button"
                onClick={() => setServings(Math.min(10, servings + 1))}
                className="w-8 h-8 border border-gray-200 rounded-sm"
              >
                +
              </button>
            </div>
          </div>
        </div>

        <div className="bg-white rounded-sm shadow-sm p-8 mb-6">
          <h2 className="text-lg mb-6 pb-3 border-b">ææ–™</h2>
          <ul className="space-y-3">
            {recipe.ingredients.map(ing => (
              <li key={ing.id} className="flex justify-between py-3 border-b border-gray-50">
                <span className="text-sm">{ing.name}</span>
                <span className="text-sm text-gray-500">
                  {adjustAmount(ing.amount, recipe.servings, servings)} {ing.unit}
                </span>
              </li>
            ))}
          </ul>
        </div>

        <div className="bg-white rounded-sm shadow-sm p-8 mb-6">
          <h2 className="text-lg mb-6 pb-3 border-b">ä½œã‚Šæ–¹</h2>
          <ol className="space-y-5">
            {recipe.steps.map(step => (
              <li key={step.id} className="flex gap-5 pb-5 border-b border-gray-50">
                <span className="text-lg font-medium text-amber-700">{step.stepNumber}</span>
                <p className="text-sm leading-relaxed">{step.description}</p>
              </li>
            ))}
          </ol>
        </div>

        {recipe.description && (
          <div className="bg-amber-50 border-l-4 border-amber-700 rounded-sm p-6 mb-6">
            <h3 className="text-sm font-medium text-amber-700 mb-3">ğŸ’¡ ã‚³ãƒ„ãƒ»ãƒã‚¤ãƒ³ãƒˆ</h3>
            <p className="text-sm leading-relaxed text-gray-600">{recipe.description}</p>
          </div>
        )}

        <div className="flex gap-3">
          <button
            type="button"
            onClick={onEdit}
            className="flex-1 py-3 border border-gray-200 rounded-sm text-sm hover:border-amber-700"
          >
            ç·¨é›†ã™ã‚‹
          </button>
          <button
            type="button"
            onClick={handleDelete}
            className="flex-1 py-3 border border-red-200 text-red-600 rounded-sm text-sm hover:bg-red-50"
          >
            å‰Šé™¤
          </button>
        </div>
      </main>
    </div>
  );
};

// ==================== Recipe Form ====================
const RecipeForm: React.FC<{ recipe?: Recipe; onBack: () => void; onSave: () => void }> = ({ recipe, onBack, onSave }) => {
  const { addRecipe, updateRecipe } = useApp();
  const [title, setTitle] = useState(recipe?.title || '');
  const [cookingTime, setCookingTime] = useState(recipe?.cookingTime || 30);
  const [difficulty, setDifficulty] = useState<Difficulty>(recipe?.difficulty || 'beginner');
  const [servings, setServings] = useState(recipe?.servings || 2);
  const [description, setDescription] = useState(recipe?.description || '');
  const [tags, setTags] = useState<string[]>(recipe?.tags || []);
  const [ingredients, setIngredients] = useState<Ingredient[]>(
    recipe?.ingredients?.length ? recipe.ingredients : [{ id: generateId(), name: '', amount: '', unit: '' }]
  );
  const [steps, setSteps] = useState<Step[]>(
    recipe?.steps?.length ? recipe.steps : [{ id: generateId(), stepNumber: 1, description: '' }]
  );
  const [tagInput, setTagInput] = useState('');

  const handleSubmit = () => {
    if (!title.trim()) {
      alert('ãƒ¬ã‚·ãƒ”åã‚’å…¥åŠ›ã—ã¦ãã ã•ã„');
      return;
    }

    const recipeData = {
      title,
      cookingTime,
      difficulty,
      servings,
      description,
      tags,
      ingredients: ingredients.filter(i => i.name.trim()),
      steps: steps.filter(s => s.description.trim()),
      isFavorite: recipe?.isFavorite || false,
    };

    if (recipe) {
      updateRecipe(recipe.id, recipeData);
    } else {
      addRecipe(recipeData);
    }
    onSave();
  };

  return (
    <div className="min-h-screen bg-gray-50">
      <header className="bg-white border-b border-gray-200 sticky top-0 z-50">
        <div className="max-w-4xl mx-auto px-4 sm:px-6 py-5 flex justify-between items-center">
          <button type="button" onClick={onBack} className="text-xl text-gray-500">â†</button>
          <button
            type="button"
            onClick={handleSubmit}
            className="px-5 py-2 bg-amber-700 text-white rounded-sm text-sm hover:bg-amber-800"
          >
            ä¿å­˜ã™ã‚‹
          </button>
        </div>
      </header>

      <main className="max-w-4xl mx-auto px-4 sm:px-6 py-10">
        <h1 className="text-2xl mb-8">{recipe ? 'ãƒ¬ã‚·ãƒ”ã‚’ç·¨é›†' : 'æ–°ã—ã„ãƒ¬ã‚·ãƒ”ã‚’ä½œæˆ'}</h1>

        <div className="bg-white rounded-sm shadow-sm p-8 mb-6">
          <h2 className="text-base font-medium mb-6 pb-3 border-b">åŸºæœ¬æƒ…å ±</h2>
          
          <div className="mb-6">
            <label className="block text-xs text-gray-500 mb-2">ãƒ¬ã‚·ãƒ”å *</label>
            <input
              type="text"
              value={title}
              onChange={(e) => setTitle(e.target.value)}
              placeholder="ä¾‹ï¼šãµã‚ãµã‚ãƒ‘ãƒ³ã‚±ãƒ¼ã‚­"
              className="w-full px-4 py-3 border border-gray-200 rounded-sm text-sm focus:outline-none focus:border-amber-700"
            />
          </div>

          <div className="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-6">
            <div>
              <label className="block text-xs text-gray-500 mb-2">èª¿ç†æ™‚é–“ï¼ˆåˆ†ï¼‰</label>
              <input
                type="number"
                value={cookingTime}
                onChange={(e) => setCookingTime(Number(e.target.value))}
                className="w-full px-4 py-3 border border-gray-200 rounded-sm text-sm focus:outline-none focus:border-amber-700"
              />
            </div>
            <div>
              <label className="block text-xs text-gray-500 mb-2">é›£æ˜“åº¦</label>
              <select
                value={difficulty}
                onChange={(e) => setDifficulty(e.target.value as Difficulty)}
                className="w-full px-4 py-3 border border-gray-200 rounded-sm text-sm focus:outline-none focus:border-amber-700"
              >
                <option value="beginner">åˆç´š</option>
                <option value="intermediate">ä¸­ç´š</option>
                <option value="advanced">ä¸Šç´š</option>
              </select>
            </div>
          </div>

          <div className="mb-6">
            <label className="block text-xs text-gray-500 mb-2">ä½•äººåˆ†</label>
            <input
              type="number"
              value={servings}
              onChange={(e) => setServings(Number(e.target.value))}
              min="1"
              max="10"
              className="w-full px-4 py-3 border border-gray-200 rounded-sm text-sm focus:outline-none focus:border-amber-700"
            />
          </div>

          <div>
            <label className="block text-xs text-gray-500 mb-2">ã‚¿ã‚°</label>
            <div className="flex flex-wrap gap-2 p-3 border border-gray-200 rounded-sm
<div className="bg-white rounded-sm shadow-sm p-8 mb-6">
      <h2 className="text-base font-medium mb-6 pb-3 border-b">ææ–™</h2>
      <div className="space-y-3 mb-4">
        {ingredients.map(ing => (
          <div key={ing.id} className="grid grid-cols-1 sm:grid-cols-[2fr_1fr_100px_40px] gap-3">
            <input
              type="text"
              value={ing.name}
              onChange={(e) => setIngredients(ingredients.map(i => i.id === ing.id ? { ...i, name: e.target.value } : i))}
              placeholder="ææ–™å"
              className="px-4 py-3 border border-gray-200 rounded-sm text-sm focus:outline-none focus:border-amber-700"
            />
            <input
              type="text"
              value={ing.amount}
              onChange={(e) => setIngredients(ingredients.map(i => i.id === ing.id ? { ...i, amount: e.target.value } : i))}
              placeholder="åˆ†é‡"
              className="px-4 py-3 border border-gray-200 rounded-sm text-sm focus:outline-none focus:border-amber-700"
            />
            <input
              type="text"
              value={ing.unit}
              onChange={(e) => setIngredients(ingredients.map(i => i.id === ing.id ? { ...i, unit: e.target.value } : i))}
              placeholder="å˜ä½"
              className="px-4 py-3 border border-gray-200 rounded-sm text-sm focus:outline-none focus:border-amber-700"
            />
            <button
              type="button"
              onClick={() => setIngredients(ingredients.filter(i => i.id !== ing.id))}
              disabled={ingredients.length === 1}
              className="border border-gray-200 text-gray-400 rounded-sm hover:border-red-300 hover:text-red-500 disabled:opacity-50"
            >
              Ã—
            </button>
          </div>
        ))}
      </div>
      <button
        type="button"
        onClick={() => setIngredients([...ingredients, { id: generateId(), name: '', amount: '', unit: '' }])}
        className="w-full py-3 bg-gray-50 border border-dashed border-gray-300 rounded-sm text-sm text-gray-600 hover:border-amber-700"
      >
        + ææ–™ã‚’è¿½åŠ 
      </button>
    </div>

    <div className="bg-white rounded-sm shadow-sm p-8 mb-6">
      <h2 className="text-base font-medium mb-6 pb-3 border-b">ä½œã‚Šæ–¹</h2>
      <div className="space-y-3 mb-4">
        {steps.map(step => (
          <div key={step.id} className="grid grid-cols-1 sm:grid-cols-[50px_1fr_40px] gap-3">
            <div className="flex items-center justify-center bg-gray-50 rounded-sm text-sm font-medium text-amber-700 py-3">
              {step.stepNumber}
            </div>
            <textarea
              value={step.description}
              onChange={(e) => setSteps(steps.map(s => s.id === step.id ? { ...s, description: e.target.value } : s))}
              placeholder="æ‰‹é †ã‚’å…¥åŠ›..."
              className="px-4 py-3 border border-gray-200 rounded-sm text-sm focus:outline-none focus:border-amber-700 resize-none"
              rows={3}
            />
            <button
              type="button"
              onClick={() => {
                const newSteps = steps.filter(s => s.id !== step.id);
                setSteps(newSteps.map((s, i) => ({ ...s, stepNumber: i + 1 })));
              }}
              disabled={steps.length === 1}
              className="border border-gray-200 text-gray-400 rounded-sm hover:border-red-300 hover:text-red-500 disabled:opacity-50 h-12"
            >
              Ã—
            </button>
          </div>
        ))}
      </div>
      <button
        type="button"
        onClick={() => setSteps([...steps, { id: generateId(), stepNumber: steps.length + 1, description: '' }])}
        className="w-full py-3 bg-gray-50 border border-dashed border-gray-300 rounded-sm text-sm text-gray-600 hover:border-amber-700"
      >
        + æ‰‹é †ã‚’è¿½åŠ 
      </button>
    </div>

    <div className="bg-white rounded-sm shadow-sm p-8 mb-6">
      <h2 className="text-base font-medium mb-6 pb-3 border-b">ãƒ¡ãƒ¢ãƒ»ã‚³ãƒ„</h2>
      <textarea
        value={description}
        onChange={(e) => setDescription(e.target.value)}
        placeholder="æ–™ç†ã®ãƒã‚¤ãƒ³ãƒˆã‚„ã‚¢ãƒ¬ãƒ³ã‚¸æ–¹æ³•ãªã©"
        className="w-full px-4 py-3 border border-gray-200 rounded-sm text-sm focus:outline-none focus:border-amber-700 resize-none"
        rows={4}
      />
    </div>

    <div className="flex gap-3">
      <button
        type="button"
        onClick={onBack}
        className="flex-1 py-3 border border-gray-200 rounded-sm text-sm hover:border-amber-700"
      >
        ã‚­ãƒ£ãƒ³ã‚»ãƒ«
      </button>
      <button
        type="button"
        onClick={handleSubmit}
        className="flex-1 py-3 bg-amber-700 text-white rounded-sm text-sm hover:bg-amber-800"
      >
        ä¿å­˜ã™ã‚‹
