// ==================== Utils ====================
const generateId = () => Date.now().toString() + Math.random().toString(36).substr(2, 9);

const getDifficultyLabel = (difficulty: Difficulty): string => {
  const labels = { beginner: 'åˆç´š', intermediate: 'ä¸­ç´š', advanced: 'ä¸Šç´š' };
  return labels[difficulty];
};

const formatDate = (dateString: string): string => {
  return new Date(dateString).toLocaleDateString('ja-JP');
};

const adjustAmount = (amount: string, originalServings: number, newServings: number): string => {
  const num = parseFloat(amount);
  if (isNaN(num)) return amount;
  const adjusted = (num * newServings) / originalServings;
  return adjusted % 1 === 0 ? adjusted.toString() : adjusted.toFixed(1);
};

// ==================== Context ====================
const AppContext = createContext<any>(undefined);

const AppProvider: React.FC<{ children: React.ReactNode }> = ({ children }) => {
  const [user, setUser] = useState<User | null>(null);
  const [recipes, setRecipes] = useState<Recipe[]>([]);

  useEffect(() => {
    const storedUser = localStorage.getItem('mise_user');
    const storedRecipes = localStorage.getItem('mise_recipes');
    
    if (storedUser) setUser(JSON.parse(storedUser));
    if (storedRecipes) {
      setRecipes(JSON.parse(storedRecipes));
    } else {
      setRecipes(sampleRecipes);
    }
  }, []);

  useEffect(() => {
    if (recipes.length > 0) {
      localStorage.setItem('mise_recipes', JSON.stringify(recipes));
    }
  }, [recipes]);

  const login = (email: string, password: string) => {
    const mockUser = { id: generateId(), name: 'å±±ç”°å¤ªéƒ', email };
    setUser(mockUser);
    localStorage.setItem('mise_user', JSON.stringify(mockUser));
  };

  const signup = (name: string, email: string) => {
    const mockUser = { id: generateId(), name, email };
    setUser(mockUser);
    localStorage.setItem('mise_user', JSON.stringify(mockUser));
  };

  const logout = () => {
    setUser(null);
    localStorage.removeItem('mise_user');
  };

  const addRecipe = (recipeData: any) => {
    const newRecipe: Recipe = {
      ...recipeData,
      id: generateId(),
      userId: user?.id || '',
      createdAt: new Date().toISOString(),
    };
    setRecipes(prev => [...prev, newRecipe]);
  };

  const updateRecipe = (id: string, updates: any) => {
    setRecipes(prev => prev.map(r => r.id === id ? { ...r, ...updates } : r));
  };

  const deleteRecipe = (id: string) => {
    setRecipes(prev => prev.filter(r => r.id !== id));
  };

  const toggleFavorite = (id: string) => {
    setRecipes(prev => prev.map(r => r.id === id ? { ...r, isFavorite: !r.isFavorite } : r));
  };

  return (
    <AppContext.Provider value={{ user, recipes, login, signup, logout, addRecipe, updateRecipe, deleteRecipe, toggleFavorite }}>
      {children}
    </AppContext.Provider>
  );
};

const useApp = () => useContext(AppContext);

// ==================== Login Screen ====================
const LoginScreen: React.FC<{ onLogin: () => void }> = ({ onLogin }) => {
  const [isLogin, setIsLogin] = useState(true);
  const [name, setName] = useState('');
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');
  const { login, signup } = useApp();

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    if (isLogin) {
      login(email, password);
    } else {
      signup(name, email);
    }
    onLogin();
  };

  return (
    <div className="min-h-screen flex items-center justify-center bg-gray-50 px-4">
      <div className="w-full max-w-md">
        <div className="text-center mb-12">
          <h1 className="text-4xl font-light tracking-widest text-amber-700 mb-2">MISE</h1>
          <p className="text-xs text-gray-400 tracking-wide">ã‚·ãƒ³ãƒ—ãƒ«ã«ã€ç¾ã—ãã€ãƒ¬ã‚·ãƒ”ã‚’æ•´ç†ã™ã‚‹</p>
        </div>
        
        <div className="bg-white rounded-sm shadow-sm p-10">
          <div className="flex border-b border-gray-200 mb-8">
            <button
              type="button"
              onClick={() => setIsLogin(true)}
              className={`flex-1 pb-3 text-sm transition-colors ${isLogin ? 'text-amber-700 border-b-2 border-amber-700' : 'text-gray-400'}`}
            >
              ãƒ­ã‚°ã‚¤ãƒ³
            </button>
            <button
              type="button"
              onClick={() => setIsLogin(false)}
              className={`flex-1 pb-3 text-sm transition-colors ${!isLogin ? 'text-amber-700 border-b-2 border-amber-700' : 'text-gray-400'}`}
            >
              æ–°è¦ç™»éŒ²
            </button>
          </div>
          
          <form onSubmit={handleSubmit}>
            {!isLogin && (
              <div className="mb-6">
                <label className="block text-xs text-gray-500 mb-2">ãŠåå‰</label>
                <input
                  type="text"
                  value={name}
                  onChange={(e) => setName(e.target.value)}
                  className="w-full px-4 py-3 border border-gray-200 rounded-sm text-sm focus:outline-none focus:border-amber-700"
                  placeholder="å±±ç”°å¤ªéƒ"
                  required
                />
              </div>
            )}
            
            <div className="mb-6">
              <label className="block text-xs text-gray-500 mb-2">ãƒ¡ãƒ¼ãƒ«ã‚¢ãƒ‰ãƒ¬ã‚¹</label>
              <input
                type="email"
                value={email}
                onChange={(e) => setEmail(e.target.value)}
                className="w-full px-4 py-3 border border-gray-200 rounded-sm text-sm focus:outline-none focus:border-amber-700"
                placeholder="example@mail.com"
                required
              />
            </div>
            
            <div className="mb-6">
              <label className="block text-xs text-gray-500 mb-2">ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰</label>
              <input
                type="password"
                value={password}
                onChange={(e) => setPassword(e.target.value)}
                className="w-full px-4 py-3 border border-gray-200 rounded-sm text-sm focus:outline-none focus:border-amber-700"
                placeholder="8æ–‡å­—ä»¥ä¸Š"
                required
              />
            </div>
            
            <button
              type="submit"
              className="w-full py-3 bg-amber-700 text-white rounded-sm text-sm tracking-wide hover:bg-amber-800 transition-colors"
            >
              {isLogin ? 'ãƒ­ã‚°ã‚¤ãƒ³' : 'ã‚¢ã‚«ã‚¦ãƒ³ãƒˆã‚’ä½œæˆ'}
            </button>
          </form>
        </div>
      </div>
    </div>
  );
};

// ==================== Dashboard ====================
const Dashboard: React.FC<{ onCreateRecipe: () => void; onViewRecipe: (recipe: Recipe) => void }> = ({ onCreateRecipe, onViewRecipe }) => {
  const { user, recipes, logout, toggleFavorite } = useApp();
  const [searchQuery, setSearchQuery] = useState('');
  const [selectedTag, setSelectedTag] = useState('ã™ã¹ã¦');

  const allTags = ['ã™ã¹ã¦', 'ãŠæ°—ã«å…¥ã‚Š', ...Array.from(new Set(recipes.flatMap((r: Recipe) => r.tags)))];

  const filteredRecipes = recipes.filter((recipe: Recipe) => {
    const matchesSearch = recipe.title.toLowerCase().includes(searchQuery.toLowerCase()) ||
      recipe.ingredients.some(ing => ing.name.toLowerCase().includes(searchQuery.toLowerCase()));
    const matchesTag = selectedTag === 'ã™ã¹ã¦' || 
      (selectedTag === 'ãŠæ°—ã«å…¥ã‚Š' ? recipe.isFavorite : recipe.tags.includes(selectedTag));
    return matchesSearch && matchesTag;
  });

  return (
    <div className="min-h-screen bg-gray-50">
      <header className="bg-white border-b border-gray-200 sticky top-0 z-50">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 py-5 flex justify-between items-center">
          <h1 className="text-xl sm:text-2xl font-light tracking-widest text-amber-700">MISE</h1>
          <button
            type="button"
            onClick={logout}
            className="w-9 h-9 rounded-full bg-gray-200 flex items-center justify-center text-sm text-gray-600 hover:bg-gray-300"
            title="ãƒ­ã‚°ã‚¢ã‚¦ãƒˆ"
          >
            {user?.name.charAt(0)}
          </button>
        </div>
      </header>

      <main className="max-w-7xl mx-auto px-4 sm:px-6 py-6 sm:py-10">
        <section className="mb-8">
          <div className="flex flex-col sm:flex-row gap-3 mb-5">
            <div className="flex-1 relative">
              <span className="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">ğŸ”</span>
              <input
                type="text"
                value={searchQuery}
                onChange={(e) => setSearchQuery(e.target.value)}
                placeholder="ãƒ¬ã‚·ãƒ”åã‚„ææ–™ã§æ¤œç´¢..."
                className="w-full pl-12 pr-4 py-3 border border-gray-200 rounded-sm text-sm focus:outline-none focus:border-amber-700"
              />
            </div>
            <button
              type="button"
              onClick={onCreateRecipe}
              className="px-6 py-3 bg-amber-700 text-white rounded-sm text-sm hover:bg-amber-800"
            >
              + ãƒ¬ã‚·ãƒ”ã‚’è¿½åŠ 
            </button>
          </div>

          <div className="flex gap-2 flex-wrap">
            {allTags.map((tag) => (
              <button
                key={tag}
                type="button"
                onClick={() => setSelectedTag(tag)}
                className={`px-3 py-1.5 rounded-full text-xs transition-all ${
                  selectedTag === tag ? 'bg-amber-700 text-white' : 'bg-white text-gray-600 border border-gray-200'
                }`}
              >
                {tag}
              </button>
            ))}
          </div>
        </section>

        <section>
          <h2 className="text-lg mb-6">ãƒã‚¤ãƒ¬ã‚·ãƒ” ({filteredRecipes.length}ä»¶)</h2>
          
          {filteredRecipes.length === 0 ? (
            <div className="text-center py-20">
              <div className="text-6xl mb-4">ğŸ“</div>
              <p className="text-gray-600">ãƒ¬ã‚·ãƒ”ãŒã‚ã‚Šã¾ã›ã‚“</p>
            </div>
          ) : (
            <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
              {filteredRecipes.map((recipe: Recipe) => (
                <div key={recipe.id} className="bg-white rounded-sm shadow-sm overflow-hidden hover:shadow-md transition-shadow">
                  <div 
                    onClick={() => onViewRecipe(recipe)}
                    className="aspect-[4/3] bg-gray-100 flex items-center justify-center cursor-pointer"
                  >
                    {recipe.imageUrl ? (
                      <img src={recipe.imageUrl} alt={recipe.title} className="w-full h-full object-cover" />
                    ) : (
                      <span className="text-5xl">ğŸ½ï¸</span>
                    )}
                  </div>
                  <div className="p-5">
                    <div className="flex justify-between items-start mb-2">
                      <h3 
                        onClick={() => onViewRecipe(recipe)}
                        className="text-base font-normal cursor-pointer flex-1"
                      >
                        {recipe.title}
                      </h3>
                      <button
                        type="button"
                        onClick={(e) => { e.stopPropagation(); toggleFavorite(recipe.id); }}
                        className={`text-xl ml-2 ${recipe.isFavorite ? 'text-amber-700' : 'text-gray-200'}`}
                      >
                        â˜…
                      </button>
                    </div>
                    <div className="flex gap-4 text-xs text-gray-400 mb-3">
                      <span>â± {recipe.cookingTime}åˆ†</span>
                      <span>ğŸ‘¤ {getDifficultyLabel(recipe.difficulty)}</span>
                    </div>
                    <div className="flex gap-1.5 flex-wrap">
                      {recipe.tags.map(tag => (
                        <span key={tag} className="px-2 py-1 bg-gray-50 rounded-sm text-xs text-gray-600">{tag}</span>
                      ))}
                    </div>
                  </div>
                </div>
              ))}
