import React, { useState, useEffect, createContext, useContext } from 'react';

// ==================== Types ====================
interface User {
  id: string;
  name: string;
  email: string;
}

interface Ingredient {
  id: string;
  name: string;
  amount: string;
  unit: string;
}

interface Step {
  id: string;
  stepNumber: number;
  description: string;
}

type Difficulty = 'beginner' | 'intermediate' | 'advanced';

interface Recipe {
  id: string;
  userId: string;
  title: string;
  description: string;
  cookingTime: number;
  difficulty: Difficulty;
  servings: number;
  imageUrl?: string;
  isFavorite: boolean;
  tags: string[];
  ingredients: Ingredient[];
  steps: Step[];
  createdAt: string;
}

