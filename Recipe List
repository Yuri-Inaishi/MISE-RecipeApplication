import React, { useState, useMemo } from 'react';
import { useApp } from '../../contexts/AppContext';
import { DashboardProps, Recipe } from '../../types';
import { 
  getDifficultyLabel, 
  filterRecipesBySearch, 
  filterRecipesByTag,
  extractAllTags 
} from '../../utils';

export const Dashboard: React.FC<DashboardProps> = ({ onCreateRecipe, onViewRecipe }) => {
  const { user, recipes, logout, toggleFavorite } = useApp();
  const [searchQuery, setSearchQuery] = useState('');
  const [selectedTag, setSelectedTag] = useState('ã™ã¹ã¦');

  // ã™ã¹ã¦ã®ã‚¿ã‚°ã‚’å–å¾—
  const allTags = useMemo(() => {
    const tags = extractAllTags(recipes);
    return ['ã™ã¹ã¦', 'ãŠæ°—ã«å…¥ã‚Š', ...tags];
  }, [recipes]);

  // ãƒ•ã‚£ãƒ«ã‚¿ãƒ¼æ¸ˆã¿ãƒ¬ã‚·ãƒ”
  const filteredRecipes = useMemo(() => {
    let result = recipes;

    // ã‚¿ã‚°ã§ãƒ•ã‚£ãƒ«ã‚¿ãƒ¼
    result = filterRecipesByTag(result, selectedTag);

    // æ¤œç´¢ã‚¯ã‚¨ãƒªã§ãƒ•ã‚£ãƒ«ã‚¿ãƒ¼
    if (searchQuery.trim()) {
      result = filterRecipesBySearch(result, searchQuery);
    }

    return result;
  }, [recipes, selectedTag, searchQuery]);

  // ãŠæ°—ã«å…¥ã‚Šãƒˆã‚°ãƒ«ï¼ˆã‚¤ãƒ™ãƒ³ãƒˆä¼æ’­ã‚’é˜²ãï¼‰
  const handleToggleFavorite = (e: React.MouseEvent, recipeId: string) => {
    e.stopPropagation();
    toggleFavorite(recipeId);
  };

  return (
    <div className="min-h-screen bg-gray-50">
      {/* ==================== Header ==================== */}
      <header className="bg-white border-b border-gray-200 sticky top-0 z-50">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 py-5 flex justify-between items-center">
          <h1 className="text-xl sm:text-2xl font-light tracking-widest text-amber-700">
            MISE
          </h1>
          <div className="flex items-center gap-3">
            {/* ãƒ¦ãƒ¼ã‚¶ãƒ¼ã‚¢ãƒã‚¿ãƒ¼ */}
            <button
              type="button"
              onClick={logout}
              className="w-9 h-9 rounded-full bg-gray-200 flex items-center justify-center text-sm text-gray-600 hover:bg-gray-300 transition-colors"
              title={`${user?.name} - ãƒ­ã‚°ã‚¢ã‚¦ãƒˆ`}
            >
              {user?.name.charAt(0)}
            </button>
          </div>
        </div>
      </header>

      {/* ==================== Main Content ==================== */}
      <main className="max-w-7xl mx-auto px-4 sm:px-6 py-6 sm:py-10">
        {/* ==================== Search Section ==================== */}
        <section className="mb-8 sm:mb-10">
          <div className="flex flex-col sm:flex-row gap-3 mb-5">
            {/* æ¤œç´¢ãƒãƒ¼ */}
            <div className="flex-1 relative">
              <span className="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 text-lg">
                ğŸ”
              </span>
              <input
                type="text"
                value={searchQuery}
                onChange={(e) => setSearchQuery(e.target.value)}
                placeholder="ãƒ¬ã‚·ãƒ”åã‚„ææ–™ã§æ¤œç´¢..."
                className="w-full pl-12 pr-4 py-3 border border-gray-200 rounded-sm text-sm focus:outline-none focus:border-amber-700 transition-colors"
              />
            </div>

            {/* ãƒ¬ã‚·ãƒ”è¿½åŠ ãƒœã‚¿ãƒ³ */}
            <button
              type="button"
              onClick={onCreateRecipe}
              className="px-6 py-3 bg-amber-700 text-white rounded-sm text-sm tracking-wide hover:bg-amber-800 transition-colors whitespace-nowrap"
            >
              + ãƒ¬ã‚·ãƒ”ã‚’è¿½åŠ 
            </button>
          </div>

          {/* ã‚¿ã‚°ãƒ•ã‚£ãƒ«ã‚¿ãƒ¼ */}
          <div className="flex gap-2 flex-wrap">
            {allTags.map((tag) => (
              <button
                key={tag}
                type="button"
                onClick={() => setSelectedTag(tag)}
                className={`px-3 py-1.5 rounded-full text-xs transition-all ${
                  selectedTag === tag
                    ? 'bg-amber-700 text-white border border-amber-700'
                    : 'bg-white text-gray-600 border border-gray-200 hover:border-amber-700 hover:text-amber-700'
                }`}
              >
                {tag}
              </button>
            ))}
          </div>
        </section>

        {/* ==================== Recipe Grid Section ==================== */}
        <section>
          <div className="flex justify-between items-center mb-6">
            <h2 className="text-base sm:text-lg font-normal tracking-wide">
              ãƒã‚¤ãƒ¬ã‚·ãƒ”
              {filteredRecipes.length > 0 && (
                <span className="ml-2 text-sm text-gray-400">
                  ({filteredRecipes.length}ä»¶)
                </span>
              )}
            </h2>
          </div>

          {/* ç©ºã®çŠ¶æ…‹ */}
          {filteredRecipes.length === 0 && (
            <div className="text-center py-16 sm:py-20">
              <div className="text-5xl sm:text-6xl text-gray-200 mb-4">
                {searchQuery || selectedTag !== 'ã™ã¹ã¦' ? 'ğŸ”' : 'ğŸ“'}
              </div>
              <h3 className="text-lg text-gray-600 mb-2">
                {searchQuery || selectedTag !== 'ã™ã¹ã¦'
                  ? 'ãƒ¬ã‚·ãƒ”ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“'
                  : 'ãƒ¬ã‚·ãƒ”ãŒã‚ã‚Šã¾ã›ã‚“'}
              </h3>
              <p className="text-sm text-gray-400">
                {searchQuery || selectedTag !== 'ã™ã¹ã¦'
                  ? 'åˆ¥ã®æ¡ä»¶ã§æ¤œç´¢ã—ã¦ã¿ã¾ã—ã‚‡ã†'
                  : 'æ–°ã—ã„ãƒ¬ã‚·ãƒ”ã‚’è¿½åŠ ã—ã¦ã¿ã¾ã—ã‚‡ã†'}
              </p>
            </div>
          )}

          {/* ãƒ¬ã‚·ãƒ”ã‚°ãƒªãƒƒãƒ‰ */}
          {filteredRecipes.length > 0 && (
            <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
              {filteredRecipes.map((recipe) => (
                <RecipeCard
                  key={recipe.id}
                  recipe={recipe}
                  onView={() => onViewRecipe(recipe)}
                  onToggleFavorite={(e) => handleToggleFavorite(e, recipe.id)}
                />
              ))}
            </div>
          )}
        </section>
      </main>
    </div>
  );
};

// ==================== Recipe Card Component ====================
interface RecipeCardProps {
  recipe: Recipe;
  onView: () => void;
  onToggleFavorite: (e: React.MouseEvent) => void;
}

const RecipeCard: React.FC<RecipeCardProps> = ({ recipe, onView, onToggleFavorite }) => {
  return (
    <div
      onClick={onView}
      className="bg-white rounded-sm shadow-sm overflow-hidden cursor-pointer hover:shadow-md transition-shadow"
    >
      {/* ãƒ¬ã‚·ãƒ”ç”»åƒ */}
      <div className="aspect-[4/3] bg-gray-100 flex items-center justify-center overflow-hidden">
        {recipe.imageUrl ? (
          <img
            src={recipe.imageUrl}
            alt={recipe.title}
            className="w-full h-full object-cover"
          />
        ) : (
          <span className="text-4xl sm:text-5xl">ğŸ½ï¸</span>
        )}
      </div>

      {/* ãƒ¬ã‚·ãƒ”æƒ…å ± */}
      <div className="p-4 sm:p-5">
        {/* ã‚¿ã‚¤ãƒˆãƒ«ã¨ãŠæ°—ã«å…¥ã‚Š */}
        <div className="flex justify-between items-start mb-2">
          <h3 className="text-sm sm:text-base font-normal flex-1 line-clamp-2">
            {recipe.title}
          </h3>
          <button
            type="button"
            onClick={onToggleFavorite}
            className={`text-xl ml-2 flex-shrink-0 ${
              recipe.isFavorite ? 'text-amber-700' : 'text-gray-200'
            } hover:text-amber-700 transition-colors`}
            aria-label={recipe.isFavorite ? 'ãŠæ°—ã«å…¥ã‚Šè§£é™¤' : 'ãŠæ°—ã«å…¥ã‚Šã«è¿½åŠ '}
          >
            â˜…
          </button>
        </div>

        {/* ãƒ¡ã‚¿æƒ…å ± */}
        <div className="flex gap-3 sm:gap-4 text-xs text-gray-400 mb-3">
          <span className="flex items-center gap-1">
            <span>â±</span>
            <span>{recipe.cookingTime}åˆ†</span>
          </span>
          <span className="flex items-center gap-1">
            <span>ğŸ‘¤</span>
            <span>{getDifficultyLabel(recipe.difficulty)}</span>
          </span>
        </div>

        {/* ã‚¿ã‚° */}
        {recipe.tags.length > 0 && (
          <div className="flex gap-1.5 flex-wrap">
            {recipe.tags.slice(0, 3).map((tag) => (
              <span
                key={tag}
                className="px-2 py-0.5 sm:py-1 bg-gray-50 rounded-sm text-xs text-gray-600"
              >
                {tag}
              </span>
            ))}
            {recipe.tags.length > 3 && (
              <span className="px-2 py-0.5 sm:py-1 text-xs text-gray-400">
                +{recipe.tags.length - 3}
              </span>
            )}
          </div>
        )}
      </div>
    </div>
  );
};
