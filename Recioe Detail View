  };

  // ==================== Delete Handler ====================
  const handleDelete = () => {
    if (window.confirm(`ã€Œ${recipe.title}ã€ã‚’å‰Šé™¤ã—ã¾ã™ã‹ï¼Ÿ\nã“ã®æ“ä½œã¯å–ã‚Šæ¶ˆã›ã¾ã›ã‚“ã€‚`)) {
      deleteRecipe(recipe.id);
