          <button
            type="button"
            onClick={onBack}
            className="text-xl text-gray-500 hover:text-amber-700 transition-colors"
            aria-label="æˆ»ã‚‹"
          >
            â†
          </button>
          <div className="flex gap-3">
            <button
              type="button"
              onClick={() => toggleFavorite(recipe.id)}
              className={`text-xl ${
                recipe.isFavorite ? 'text-amber-700' : 'text-gray-300'
              } hover:text-amber-700 transition-colors`}
              aria-label={recipe.isFavorite ? 'ãŠæ°—ã«å…¥ã‚Šè§£é™¤' : 'ãŠæ°—ã«å…¥ã‚Šã«è¿½åŠ '}
            >
              â˜…
            </button>
            <button
              type="button"
              onClick={onEdit}
              className="text-lg text-gray-500 hover:text-amber-700 transition-colors"
              aria-label="ç·¨é›†"
            >
              âœ
            </button>
          </div>
        </div>
      </header>

      {/* ==================== Main Content ==================== */}
      <main className="max-w-4xl mx-auto px-4 sm:px-6 py-6 sm:py-10">
        {/* ==================== Hero Section ==================== */}
        <div className="bg-white rounded-sm shadow-sm overflow-hidden mb-8">
          {/* ç”»åƒ */}
          <div className="aspect-video bg-gray-100 flex items-center justify-center overflow-hidden">
            {recipe.imageUrl ? (
              <img
                src={recipe.imageUrl}
                alt={recipe.title}
                className="w-full h-full object-cover"
              />
            ) : (
              <span className="text-6xl sm:text-8xl">ğŸ½ï¸</span>
            )}
          </div>

          {/* ãƒ¬ã‚·ãƒ”æƒ…å ± */}
          <div className="p-6 sm:p-8">
            <h1 className="text-2xl sm:text-3xl font-normal mb-4 tracking-wide">
              {recipe.title}
            </h1>
            
            {/* ãƒ¡ã‚¿æƒ…å ± */}
            <div className="flex flex-wrap gap-4 sm:gap-6 text-sm text-gray-500 mb-4">
              <span className="flex items-center gap-2">
                <span>â±</span>
                <span>{recipe.cookingTime}åˆ†</span>
              </span>
              <span className="flex items-center gap-2">
                <span>ğŸ‘¤</span>
